# Environment Configuration File
# Copy this to .env.local and customize for your environment

# ============ API Configuration ============
API_BASE_URL=https://api.buma.local:8080
API_TIMEOUT_SECONDS=30
ENABLE_API_LOGGING=true

# ============ Database Configuration ============
# For local development (using Docker Compose)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=buma_wallet
DB_USER=buma_user
DB_PASSWORD=buma_password
DB_ENCRYPTION_KEY=your-encryption-key-minimum-32-chars

# ============ JWT Configuration ============
# Token expiry (in seconds)
# 900 seconds = 15 minutes (as per requirements)
JWT_EXPIRY_SECONDS=900
JWT_REFRESH_EXPIRY_SECONDS=604800  # 7 days

# ============ Feature Flags ============
ENABLE_LOGGING=true
ENABLE_PRETTY_LOGGING=true
ENABLE_OFFLINE_MODE=true
SYNC_INTERVAL_SECONDS=300  # Auto-sync pending transactions every 5 minutes

# ============ Security ============
# For production, use strong random values
JWT_SECRET=change-this-to-a-strong-random-value-in-production
SECURE_STORAGE_ENABLED=true

# ============ Development ============
DEBUG_MODE=false
MOCK_API_RESPONSES=false  # Set to true for UI development without backend
